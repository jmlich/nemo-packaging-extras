# $Id$

_host="github.com"
_project=mapbox
_basename=mapbox-gl-native
_branch=master

_gitname=$_basename
pkgname=$_basename-git

pkgver=maps.v1.6.0.r16.gcf734a2fec

pkgrel=1
pkgdesc="Mapbox GL Native Qt version"
arch=('x86_64' 'aarch64')
url="https://$_host/$_project/$_gitname#branch=$_branch"
license=('2-Clause BSD license')
depends=('qt5-base' 'sqlite' 'zlib' 'curl' 'icu' )
makedepends=('git' 'cmake')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=("${pkgname}::git+${url}")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/${pkgname}"
  ( set -o pipefail
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g' ||
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
  ) 2>/dev/null
}

prepare() {
    cd "$srcdir/${pkgname}"
    git submodule update --init --recursive
}

build() {
    cmake \
        -B "${pkgname}/build" \
        -S "${pkgname}" \
        -DCMAKE_INSTALL_PREFIX:PATH='/usr' \
        -DMBGL_WITH_QT=ON -DMBGL_WITH_WERROR=OFF -DMBGL_WITH_QT_HEADLESS=OFF -DMBGL_WITH_QT_LIB_ONLY=ON
    make -C "${pkgname}/build" all
}

package() {
    cd "${srcdir}/${pkgname}/build"
    make -j 1 INSTALL_ROOT="${pkgdir}" install
}
